<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameplayActivity"
    android:weightSum="6"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnFiftyfifty"
            android:text="Felezés"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"/>
        <Button
            android:id="@+id/btnAudience"
            android:text="Közönség"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"/>
        <Button
            android:id="@+id/btnPhone"
            android:text="Telefon"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txtviewQuestion"
        android:layout_width="wrap_content"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="Első kérdés legyen mondjuk az hogyan hogyan tujduk m egmealsmdadkjnad"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnA"
        android:text="A valasz"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/btnB"
        android:text= "B valasz"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buttonshape"/>
    <Button
        android:id="@+id/btnC"
        android:text="C valasz"
        android:layout_margin="10dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/btnD"
        android:text="D valasz"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buttonshape"/>

</LinearLayout>